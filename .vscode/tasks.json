{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"${workspaceFolder}/main.cpp",
				"${workspaceFolder}/source/cputucker/cmdline_opts.cpp",
				"-Wdeprecated-declarations",
				"-Wno-write-strings",
				"-fopenmp",
				"-O0",
				"-I${workspaceFolder}/include",
				"-I${workspaceFolder}/lib",
				"-I",
				"/usr/include/boost",
				"-L",
				"/usr/lib/x86_64-linux-gnu",
				"-std=c++11",
				"-lboost_program_options",
				"-lboost_filesystem",
				"-lboost_system",
				"-o",
				"${workspaceFolder}/CPUTucker-gxx"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		}

	]
}